<div class="form">
    <form id="form" onsubmit="setProfile(event);" enctype="multipart/form-data">
        <div>
            <label for="name">Name</label>
            <div>
                <input type="text" class="input" name="name" id="name" value="<%= name %>" disabled></input>
            </div>
        </div>
        <div>
            <label for="andrewid">AndrewID</label>
            <div>
                <input type="text" class="input" name="andrewid" id="andrewid" value="<%= andrewid %>" <%= (isAndrewIDVerified) ? 'verified' : '' %> disabled></input>
            </div>
        </div>
        <label for="class-year">Class year</label>
        <div id="class-year" class="select">
            <label>
                <input name="year" type="radio" value="freshman" disabled <%= (year == 'freshman') ? 'checked' : '' %> />
                <span>Freshman</span>
            </label>
            <label>
                <input name="year" type="radio" value="sophomore" disabled <%= (year == 'sophomore') ? 'checked' : '' %> />
                <span>Sophomore</span>
            </label>
            <label>
                <input name="year" type="radio" value="junior" disabled <%= (year == 'junior') ? 'checked' : '' %> />
                <span>Junior</span>
            </label>
            <label>
                <input name="year" type="radio" value="senior" disabled <%= (year == 'senior') ? 'checked' : '' %> />
                <span>Senior</span>
            </label>
            <label>
                <input name="year" type="radio" value="graduate" disabled <%= (year == 'graduate') ? 'checked' : '' %> />
                <span>Graduate</span>
            </label>
        </div>
        <label for="size-selection">T-shirt size</label>
        <div id="size-selection" class="select">
            <label>
                <input name="size" type="radio" value="XS" disabled <%= (size == 'XS') ? 'checked' : '' %> />
                <span>XS</span>
            </label>
            <label>
                <input name="size" type="radio" value="S" disabled <%= (size == 'S') ? 'checked' : '' %> />
                <span>S</span>
            </label>
            <label>
                <input name="size" type="radio" value="M" disabled <%= (size == 'M') ? 'checked' : '' %> />
                <span>M</span>
            </label>
            <label>
                <input name="size" type="radio" value="L" disabled <%= (size == 'L') ? 'checked' : '' %> />
                <span>L</span>
            </label>
            <label>
                <input name="size" type="radio" value="XL" disabled <%= (size == 'XL') ? 'checked' : '' %> />
                <span>XL</span>
            </label>
            <label>
                <input name="size" type="radio" value="XXL" disabled <%= (size == 'XXL') ? 'checked' : '' %> />
                <span>XXL</span>
            </label>
        </div>
        

        <div>
            <label for="resume-upload">Resume</label>
            <div id="upload">
                <%if (resumeExists) { %>
                    <div id="resume-download"><div id="resume-name"><%= resumeName %></div> <a id="download-icon"><svg id="download-icon" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="download" class="svg-inline--fa fa-download fa-w-16" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path fill="currentColor" d="M216 0h80c13.3 0 24 10.7 24 24v168h87.7c17.8 0 26.7 21.5 14.1 34.1L269.7 378.3c-7.5 7.5-19.8 7.5-27.3 0L90.1 226.1c-12.6-12.6-3.7-34.1 14.1-34.1H192V24c0-13.3 10.7-24 24-24zm296 376v112c0 13.3-10.7 24-24 24H24c-13.3 0-24-10.7-24-24V376c0-13.3 10.7-24 24-24h146.7l49 49c20.1 20.1 52.5 20.1 72.6 0l49-49H488c13.3 0 24 10.7 24 24zm-124 88c0-11-9-20-20-20s-20 9-20 20 9 20 20 20 20-9 20-20zm64 0c0-11-9-20-20-20s-20 9-20 20 9 20 20 20 20-9 20-20z"></path></svg></a></div>
                <% } else { %>
                    <div id="resume-download"> No resume saved. </div>
                <% } %>
                <input type="file" id="resume-upload" accept="application/pdf" style="display:none"/>
            </div>
        </div>


        <button type="submit" id="set-button" class="btn" style="display:none">Set profile</button>
    </form>
    <button type="button" onclick="enableEdit();" id="edit-button" class="btn">Edit profile</button>
</div>